
<%= link_to 'New Invite', new_invite_path %><br>
<% @invites.each do |invite| %>

    <%= invite.match_day %><br>
    <%= invite.place %><br>
    <%= invite.detail %><br>
    <%= invite.status %><br>
    <%= invite.user.name %><br>
    <%= invite.team.name %><br>

    <% invite.team.features.each do |feature| %>
      <%= feature.name %>
    <% end %>
    <br>
    <%= link_to 'Show', invite %>
    <%= link_to 'Edit', edit_invite_path(invite) %>
    <%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
