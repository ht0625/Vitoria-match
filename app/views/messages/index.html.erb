<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <div class="box has-text-centered">
          <% if @over_ten %>
          <%= link_to '以前のメッセージ', '?m=all' %>
          <% end %>
          <div class="ui segment">
            <% @messages.each do |message| %>
            <% if message.body.present? %>
            <div class="item">
              <div class="content">
                <div class="header"><strong><%= message.user.name %></strong> <%= message.message_time %></div>
                <div class="list">
                  <div class="item">
                    <i class="right triangle icon"></i>
                    <%= message.body %>
                    <% if message.user == current_user %>
                    <%= message.read ? '既読' : '未読' %>
                    <% end %>
                  </div><br>
                </div>
              </div>
            </div>
            <% end %>
            <% end %>
          </div>
        </div>
        <div class="box has-text-centered mt-6">
          <%= form_with(model: [@conversation, @message]) do |f| %>
          <div class="field">
            <%= f.text_area :body, class: "form-control", class: "textarea" %>
          </div>
          <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
          <div class="actions has-text-centered">
            <%= f.submit "メッセージを送る", class: "button is-success is-light is-outlined" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
